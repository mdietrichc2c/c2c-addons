<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="invoice_supplier_form" model="ir.ui.view">
      <field name="name">account.invoice.form</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_supplier_form"/>
      <field
        name="groups_id"
        eval="[(6, 0, [ref('base.group_multi_currency')])]"/>
      <field name="priority">4</field>
      <field name="arch" type="xml">
        <notebook position="inside">
          <page
            string="Other Currencies"
            attrs="{'invisible': [('state', '==', 'draft')]}">
            <group>
              <group>
                <field name="amount_untaxed_eur"/>
                <field name="amount_untaxed_usd"/>
              </group>
              <group>
                <field name="rate_eur"/>
                <field name="rate_usd"/>
              </group>
            </group>
          </page>
        </notebook>
      </field>
    </record>

    <record id="invoice_form" model="ir.ui.view">
      <field name="name">account.invoice.form</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_form"/>
      <field
        name="groups_id"
        eval="[(6, 0, [ref('base.group_multi_currency')])]"/>
      <field name="priority">4</field>
      <field name="arch" type="xml">
        <notebook position="inside">
          <page
            string="Other Currencies"
            attrs="{'invisible': [('state', '==', 'draft')]}">
            <group>
              <group>
                <field name="amount_untaxed_eur"/>
                <field name="amount_untaxed_usd"/>
              </group>
              <group>
                <field name="rate_eur"/>
                <field name="rate_usd"/>
              </group>
            </group>
          </page>
        </notebook>
      </field>
    </record>

    <record id="invoice_tree" model="ir.ui.view">
      <field name="name">account.invoice.tree</field>
      <field name="model">account.invoice</field>
      <field name="inherit_id" ref="account.invoice_tree"/>
      <field
        name="groups_id"
        eval="[(6, 0, [ref('base.group_multi_currency')])]"/>
      <field name="arch" type="xml">
        <field name="amount_untaxed" position="replace">
          <field name="amount_untaxed" string="Untaxed"/>
        </field>
        <field name="amount_total" position="replace">
          <field name="amount_total"/>
          <field name="amount_untaxed_eur" sum="Total Untaxed EUR"/>
          <field name="amount_untaxed_usd" sum="Total Untaxed USD"/>
        </field>
      </field>
    </record>

  </data>
</openerp>
